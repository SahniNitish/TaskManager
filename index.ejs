<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="POST">
          <input
            class="block px-5 py-2 w-full rounded-md outline-none bg-zinc-800"
            type="text"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="block mt-2 px-5 w-full rounded-md outline-none py-2 resize-none bg-zinc-800"
            placeholder="Write your task detail"
            name="details"
          ></textarea>
          <input
            class="mt-2 bg-blue-600 px-5 py-2"
            type="submit"
            value="Create task"
          />
        </form>
      </div>
      <div class="task hidden flex gap-3 flex-wrap p-10">
        <% if (files.length > 0) { %>
          <% files.forEach(function (val) { %>
            <div class="task w-72 px py-4 rounded-md bg-zinc-800">
              <h1 class="text-white text-2xl px-5 tracking-tighter">
                <%= val.split('.')[0] %> <!-- Display the task title -->
              </h1>
              <a class="text-blue-500 inline-block mt-3 px-5" href="/task/<%= val %>">
                Read more
              </a>
              
            </div>
          <% }) %>
        <% } else { %>
          <h3 class="text-zinc-600">No tasks yet.</h3>
        <% } %>
      </div>
      
    </div>
  </body>
</html>
